<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    	http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">

    <jee:jndi-lookup id="dataSource" jndi-name="jdbc/quiz"  expected-type="javax.sql.DataSource" />

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource" />
    </bean>

    <bean id="quizSetDao" class="com.getjavajob.training.web06.andrianovan.quiz.dao.concretedao.QuizSetDao">
        <constructor-arg ref="dataSource" />
        <constructor-arg ref="jdbcTemplate" />
    </bean>

    <bean id="questionDao" class="com.getjavajob.training.web06.andrianovan.quiz.dao.concretedao.QuestionDao">
        <constructor-arg ref="dataSource" />
        <constructor-arg ref="jdbcTemplate" />
    </bean>

    <bean id="answerDao" class="com.getjavajob.training.web06.andrianovan.quiz.dao.concretedao.AnswerDao">
        <constructor-arg ref="dataSource" />
        <constructor-arg ref="jdbcTemplate" />
    </bean>

    <bean id="studyGroupDao" class="com.getjavajob.training.web06.andrianovan.quiz.dao.concretedao.StudyGroupDao">
        <constructor-arg ref="dataSource" />
        <constructor-arg ref="jdbcTemplate" />
    </bean>

    <bean id="stuentDao" class="com.getjavajob.training.web06.andrianovan.quiz.dao.concretedao.StudentDao">
        <constructor-arg ref="dataSource" />
        <constructor-arg ref="jdbcTemplate" />
    </bean>

</beans>