<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>quiz</display-name>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:quiz-context.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.getjavajob.training.web06.andrianovan.quiz.ui.CharacterEncodingFilter</listener-class>
    </listener>
    <listener>
        <listener-class>com.getjavajob.training.web06.andrianovan.quiz.ui.LoginFilter</listener-class>
    </listener>

    <filter>
        <filter-name>CharacterEncoding</filter-name>
        <filter-class>com.getjavajob.training.web06.andrianovan.quiz.ui.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharacterEncoding</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.getjavajob.training.web06.andrianovan.quiz.ui.LoginFilter</filter-class>
        <init-param>
            <param-name>loginPage</param-name>
            <param-value>/login.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>excludedURLs</param-name>
            <param-value>/resources/;/login</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.QuizzesSearch</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllQuizes</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.AllQuizzesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllQuizes</servlet-name>
        <url-pattern>/allQuizes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuizInfo</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.QuizInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QuizInfo</servlet-name>
        <url-pattern>/quizInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuizRun</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.QuizRunServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QuizRun</servlet-name>
        <url-pattern>/quizRun</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuizQuestion</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.QuizQuestionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QuizQuestion</servlet-name>
        <url-pattern>/quizQuestion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudyGroupInfo</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.StudyGroupInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudyGroupInfo</servlet-name>
        <url-pattern>/studyGroupInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudyGroupEdit</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.StudyGroupEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudyGroupEdit</servlet-name>
        <url-pattern>/studyGroupEdit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudyGroupAddOrUpdate</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.StudyGroupAddOrUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudyGroupAddOrUpdate</servlet-name>
        <url-pattern>/studyGroupAddOrUpdate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudyGroups</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.StudyGroupsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudyGroups</servlet-name>
        <url-pattern>/studyGroups</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>Login</display-name>
        <servlet-name>LoginCheck</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.LoginCheckServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginCheck</servlet-name>
        <url-pattern>/loginCheck</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.getjavajob.training.web06.andrianovan.quiz.ui.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>1</session-timeout>
        <cookie-config>
            <name>MY_JSESSIONID</name>
        </cookie-config>
    </session-config>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

    <resource-ref>
        <description>DB</description>
        <res-ref-name>jdbc/quiz</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>